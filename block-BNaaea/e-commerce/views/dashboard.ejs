<!DOCTYPE html>
<html>
  <head>
    <title>E-Kart</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="text-gray-600">
    <% include partials/header %>
    <div class="container mx-auto">
      <h1 class="text-center text-2xl text-gray-600 mb-6">Dashboard</h1>
      <div class="flex justify-center items-center mb-8">
        <a class="mx-8" href="/admins/products">Products</a>
        <a class="mx-8" href="/admins/users">Users</a>
        <a class="mx-8" href="/admins/categories">Categories</a>
      </div>
      <% if(products) { %>
      <h3 class="text-center text-xl text-gray-600 mb-6">Products</h3>
      <div class="flex justify-between items-center">
        <% products.forEach(product => { %>
        <a
          href="/products/<%=product.id%>"
          class="shadow-md max-w-xs text-center p-4"
        >
          <div><img src="<%=product.image%>" alt="" /></div>
          <h1><%= product.name %></h1>
          <p><%= product.price %></p>
        </a>
        <% }) %>
      </div>
      <% } else if(users) { %>
      <h3 class="text-center text-xl text-gray-600 mb-6">Users</h3>
      <div class="flex justify-between items-center">
        <% users.forEach(user => { %>
        <div class="shadow-md max-w-xs text-center p-4">
          <h1 class="mb-4"><%= user.name %></h1>
          <% if(user.isblock) { %>
          <a href="/users/<%=user.id%>?block=false" class="mx-4">Unblock</a>
          <% } else { %>
          <a href="/users/<%=user.id%>?block=true" class="mx-4">block</a>
          <% } %>
        </div>
        <% }) %>
      </div>
      <% } else if(categories) { %>
      <h3 class="text-center text-xl text-gray-600 mb-6">Categories</h3>
      <div class="flex justify-between items-center">
        <% categories.forEach(category => { %>
        <div class="shadow-md max-w-xs text-center p-4">
          <a
            href="/products/categories?category=<%=category.name%>"
            class="mb-4"
            ><%= category.name %></a
          >
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
  </body>
</html>
