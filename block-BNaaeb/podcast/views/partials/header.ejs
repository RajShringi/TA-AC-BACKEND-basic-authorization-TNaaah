<header class="py-8 mb-8 border-b">
  <div class="container mx-auto flex justify-between items-center">
    <a class="text-gray-700 text-3xl" href="/">Podfast</a>
    <% if(!admin && !user) { %>
    <nav>
      <ul class="flex justify-between items-center">
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/admins/register"
            >Admin Register</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/admins/login"
            >Admin Login</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/users/register"
            >User Register</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/users/login"
            >User Login</a
          >
        </li>
      </ul>
    </nav>
    <% } %> <% if(admin) { %>
    <nav>
      <ul class="flex justify-between items-center">
        <li>
          <p><%=admin.name%></p>
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/podcasts"
            >Podcast</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/podcasts/new"
            >Add Podcast</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/admins/logout"
            >Logout</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/admins/verify"
            >verify</a
          >
        </li>
      </ul>
    </nav>
    <% } %> <% if(user) { %>
    <nav>
      <ul class="flex justify-between items-center">
        <li>
          <p><%=user.name%></p>
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/podcasts"
            >Podcast</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/podcasts/userpodcast"
            >Add Podcast</a
          >
        </li>
        <li>
          <a
            class="mx-4 bg-rose-200 text-rose-400 px-4 py-3 rounded-lg"
            href="/users/logout"
            >Logout</a
          >
        </li>
      </ul>
    </nav>
    <% } %>
  </div>
</header>
